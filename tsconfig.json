{
  "ts-node": {
    "files": true
  },
  "files": [
    "globals.d.ts"
  ],
  "include": [
    "**/*"
  ],
  "exclude": [
    "./bin",
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}